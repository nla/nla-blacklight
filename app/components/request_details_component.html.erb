<% @holding["itemRecords"].each do |item| %>
  <% if item["requestable"] %>
    <div class="card w-100 mb-4">
      <div class="card-body">
        <div class="row">
          <div class="col-12 col-sm-8">
            <dl class="document-metadata row mb-0">
              <% if item["pickupLocation"].present? %>
                <%= render RequestDetailsRowComponent.new do |component| %>
                  <% component.with_label do %>
                    Collect From:
                  <% end %>
                  <% component.with_value do %>
                    <%= item["pickupLocation"]["discoveryDisplayName"] %>
                  <% end %>
                <% end %>
              <% end %>

              <%= render RequestDetailsRowComponent.new do |component| %>
                <% component.with_label do %>
                  Call Number:
                <% end %>
                <% component.with_value do %>
                  <p class="mb-0"><%= item["itemLevelCallNumber"] %>
                  <% if item["itemCategory"] == "monograph" && item["enumeration"].present? %>
                    <br>Copy: <%= item["enumeration"] %>
                  <% end %></p>
                <% end %>
              <% end %>

              <%= render RequestDetailsRowComponent.new do |component| %>
                <% component.with_label do %>
                  Status:
                <% end %>
                <% component.with_value do %>
                  <%= item["status"]["name"] %>
                <% end %>
              <% end %>

              <% if recent_item_issue_held.present? %>
                <%= render RequestDetailsRowComponent.new do |component| %>
                  <% component.with_label do %>
                    Recent Items/Issues Held:
                  <% end %>
                  <% component.with_value do %>
                    <%= recent_item_issue_held %>
                  <% end %>
                <% end %>
              <% end %>

              <% if items_issues_held.present? %>
                <%= render RequestDetailsRowComponent.new do |component| %>
                  <% component.with_label do %>
                    Items/Issues Held:
                  <% end %>
                  <% component.with_value do %>
                    <ul class="list-unstyled">
                      <% items_issues_held.each do |issue| %>
                        <li><%= issue %></li>
                      <% end %>
                    </ul>
                  <% end %>
                <% end %>
              <% end %>

              <% if supplements.present? %>
                <%= render RequestDetailsRowComponent.new do |component| %>
                  <% component.with_label do %>
                    Supplements:
                  <% end %>
                  <% component.with_value do %>
                    <ul class="list-unstyled">
                      <% supplements.each do |supplement| %>
                        <li><%= supplement %></li>
                      <% end %>
                    </ul>
                  <% end %>
                <% end %>
              <% end %>

              <% if indexes.present? %>
                <%= render RequestDetailsRowComponent.new do |component| %>
                  <% component.with_label do %>
                    Indexes:
                  <% end %>
                  <% component.with_value do %>
                    <ul class="list-unstyled">
                      <% indexes.each do |index| %>
                        <li><%= index %></li>
                      <% end %>
                    </ul>
                  <% end %>
                <% end %>
              <% end %>
            </dl>
          </div>
          <div class="select-item-btn col-12 col-sm-4 text-right"><%= link_to "Select", "#", class: "btn btn-primary" %></div>
        </div>
    </div>
    </div>
  <% end %>
<% end %>
