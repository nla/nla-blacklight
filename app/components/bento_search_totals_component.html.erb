<div
  data-controller="bento-search-totals"
  data-action="bento-search-results@document->bento-search-totals#updateTotals">

  <nav class="navbar navbar-expand-md navbar-light">
    <span class="navbar-brand">Results: </span>
    <div id="jumpbar">
      <ul class="navbar-nav">
        <% @engines.each do |engine| %>
          <li class="nav-item">
            <span class="nav-link">
              <%= link_to BentoSearch.get_engine(engine.to_sym).configuration.title, "##{engine}" %>
              <span data-bento-search-totals-target="<%= engine %>" class="badge text-bg-warm-grey">0</span>
            </span>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</div>
