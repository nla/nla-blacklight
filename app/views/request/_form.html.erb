<div class="row mt-4">
  <div class="col-12 col-sm-8">
    <%= form_with url: solr_document_requests_path, model: request, method: :post do |f| %>
      <%= hidden_field :request, :instance_id %>
      <%= hidden_field :request, :holdings_id %>
      <%= hidden_field :request, :item_id %>
      <%= hidden_field :request, :barcode %>
      <%= hidden_field :request, :enumeration %>

      <% if request.item["itemCategory"] == "journal" %>
        <div class="form-group row">
          <%= f.label :year, t("requesting.label.year"), class: "col col-form-label" %>
          <%= f.text_field :year, class: "form-control col-sm-6", maxlength: 20 %>
          <span id="year-help" class="form-text text-muted col-sm-3"><%= t("requesting.help.year") %></span>
        </div>
        <div class="form-group row">
          <%= f.label :volume, t("requesting.label.volume"), class: "col col-form-label" %>
          <%= f.text_field :volume, class: "form-control col-sm-6", maxlength: 80 %>
          <span id="volume-help" class="form-text text-muted col-sm-3"><%= t("requesting.help.volume") %></span>
        </div>
        <div class="form-group row">
          <%= f.label :chronology, t("requesting.label.enumeration"), class: "col col-form-label" %>
          <%= f.text_field :chronology, class: "form-control col-sm-6", maxlength: 80 %>
          <span id="enumeration-help" class="form-text text-muted col-sm-3"><%= t("requesting.help.enumeration") %></span>
        </div>
      <% end %>
      <div class="form-group row">
        <%= f.label :notes, t("requesting.label.notes"), class: "col col-form-label" %>
        <%= f.text_area :notes, class: "form-control col-sm-6", maxlength: 100 %>
        <span id="notes-help" class="form-text text-muted col-sm-3"><%= t("requesting.help.notes") %></span>
      </div>

      <div class="form-group row">
        <div class="col"></div>
        <div class="col-sm-6 pl-0 pr-0"><%= f.submit t("requesting.btn_request"), class: "btn btn-primary" %></div>
        <div class="col-sm-3"></div>
      </div>
    <% end %>
  </div>
</div>
