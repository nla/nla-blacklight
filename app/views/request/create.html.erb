<h1><%= t("requesting.success.heading") %></h1>
<h2 class="mt-4"><%= @document.first("title_tsim") %></h2>

<div class="row">
  <p class="col-12 col-lg-8"><%= t("requesting.success.message", title: @document.first("title_tsim")).html_safe %></p>
</div>

<div class="row mt-4">
  <div class="col-12">
    <dl class="document-metadata row mb-0">
      <dt class="col-12 col-md-12 col-lg-3"><%= t("requesting.metadata.item_requested") %></dt>
      <dd class="col col-md-12 col-lg-9"><%= @document.first("title_tsim") %></dd>

      <dt class="col-12 col-md-12 col-lg-3"><%= t("requesting.metadata.collect_from") %></dt>
      <dd class="col col-md-12 col-lg-9">
        <p><%= pickup_location_text(@item).html_safe %></p>
      </dd>
    </dl>
  </div>
</div>

<div class="row mt-4">
  <div class="col-8">
    <%= pickup_location_img(@item) %>
  </div>
</div>
